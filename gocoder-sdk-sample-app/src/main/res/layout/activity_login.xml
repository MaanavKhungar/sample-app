<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:gravity="center">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:id="@+id/SgnUpCard"
            android:layout_margin="20dp"
            android:background="#FFF"
            app:cardElevation="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign Up"
                    android:id="@+id/SUlabel"

                    android:textSize="32sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_centerHorizontal="true"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/SUmailIL"
                    android:layout_width="match_parent"
                    android:layout_below="@id/SUlabel"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/SUmailET"
                        android:hint="Email"
                        />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/SUpassIL"
                    android:layout_below="@id/SUmailIL"
                    android:layout_marginTop="20dp"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/SUpassET"
                        android:hint="Password" />
                </android.support.design.widget.TextInputLayout>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/SgnUpBtn"
                    android:text="Sign-Up"
                    android:background="@drawable/grad"
                    android:textColor="#FFF"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/SUpassIL"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/SgnUpBtn"
                    android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:id="@+id/alregis"
                    android:layout_marginTop="20dp"
                    android:text="Already Registered?"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:id="@+id/SgnUpChg"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/alregis"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginTop="20dp"
                    android:text="Login!"/>
                </LinearLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:id="@+id/LogInCard"
            android:layout_margin="20dp"
            android:background="#FFF"
            app:cardElevation="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log In"
                    android:id="@+id/LIlabel"

                    android:textSize="32sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_centerHorizontal="true"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/LImailIL"
                    android:layout_below="@+id/LIlabel"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/LImailET"
                        android:hint="Email"
                        />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/LIpassIL"
                    android:layout_below="@id/LImailIL"
                    android:layout_marginTop="20dp"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/LIpassET"
                        android:hint="Password" />
                </android.support.design.widget.TextInputLayout>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/LogInBtn"
                    android:text="LogIn"
                    android:background="@drawable/grad"
                    android:textColor="#FFF"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/LIpassIL"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/LogInBtn"
                    android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:id="@+id/notyetregis"
                    android:layout_marginTop="20dp"
                    android:text="Not Yet Registered?"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:id="@+id/LogInChg"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/notyetregis"
                    android:layout_centerInParent="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginTop="20dp"
                    android:text="Sign-Up!"/>
                </LinearLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>




    </RelativeLayout>

</android.support.constraint.ConstraintLayout>